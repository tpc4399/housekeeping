<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.housekeeping.admin.mapper.CompanyAdvertisingMapper">

	<resultMap id="baseResultMap" type="com.housekeeping.admin.entity.CompanyAdvertising">
		<id property="id" column="id"/>
		<result property="companyId" column="company_id"/>
		<result property="title" column="title"/>
		<result property="link" column="link"/>
		<result property="content" column="content"/>
		<result property="photo" column="photo"/>
		<result property="promotion" column="promotion"/>
		<result property="endTime" column="end_time"/>
	</resultMap>

	<select id="getByRan" resultMap="baseResultMap">
		select *
		from
		company_advertising
		where
		end_time > NOW()
		order by rand() limit #{ran}
	</select>

	<select id="getAllProAd" resultMap="baseResultMap">
		select *
		from
		company_advertising
		where
		end_time > NOW()
		order by rand() limit #{ran}
	</select>

    <select id="getAllAdverByAdmin" resultType="com.housekeeping.admin.vo.CompanyAdvertisingsVo">
		SELECT
		ca.id,
		ca.company_id,
		ca.title,
		ca.link,
		ca.content,
		ca.photo,
		ca.promotion,
		ca.end_time,
		cd.company_name
		FROM
		company_advertising ca
		LEFT JOIN
		company_details cd
		ON
		ca.company_id = cd.id
		<where>
			<if test="id != null and id != ''" >
			ca.id = #{id}
			</if>
			<if test="title != null and title != ''" >
			and ca.title LIKE CONCAT('%',#{title},'%')
			</if>
		</where>
	</select>

</mapper>
